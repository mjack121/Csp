@{
    ViewData["Title"] = "我爱果庄，兴趣小组";
}

@model Category

<section>
    <div class="container" style="margin-bottom:100px;">
        <div class="row group">
            <div class="col-md-12 text-right" style="padding: 20px 0px;">
                <form class="form-inline">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control" id="exampleInputAmount"
                                   placeholder="搜索感兴趣的水果……">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <img src="@(Model.BigPic)" alt="@(Model.Name)" />
                    </div>
                    <div class="panel-footer">
                        <h2>@Model.Name</h2>
                        <div style="display: inline-block;text-align: left">
                            <p style="margin-top: 10px;"><i class="love"></i>@(Model.Fllows)人喜欢</p>
                            <p style="margin-top: 5px;"><i class="add"></i>关注@(Model.Name)小组</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                @Html.Raw(Model.Descript)
            </div>
        </div>

        <div class="row" style="margin: 0px;">
            <table class="table table-striped table-hover" style="background-color: #fff;border: 1px solid #d5d5d5;">
                <thead>
                    <tr>
                        <th>主题</th>
                        <th>作者</th>
                        <th>回复/浏览</th>
                        <th>最后回复</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
                <tfoot>


                    <tr id="trExample" style="display:none;">
                        <td>{0}</td>
                        <td>{1}</td>
                        <td>{2}</td>
                        <td>{3}</td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <nav class="text-left">
                                <!--text-right 右对齐，bootstrap中样式-->
                                <ul class="pagination"></ul>
                            </nav>
                        </td>
                        <td>
                            <a class="new" asp-action="create" asp-controller="forum" asp-route-cid="@(Model.Id)">发新贴</a>
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div>
            </div>
        </div>

