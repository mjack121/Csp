@{
    ViewBag.Title = "我爱果庄，我的";
}

@model IEnumerable<Category>

<div class="container" style="padding:20px; margin-bottom:120px;">

    <div class="row">
        <partial name="_Nav" />

        <div class="col-sm-8 col-sm-offset-1">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width:15%">分类名称</th>
                        <th>关注人数</th>
                        <th style="width:55%">描述</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <td style="width:15%">@item.Name</td>
                        <td>@item.Fllows</td>
                        @*white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;*@
                        <td style="width:55%;text-align:left;">@Html.Raw(item.Descript)</td>
                        <td style="padding-right:25px;"><a asp-action="category" asp-controller="my" asp-route-id="@(item.Id)">编辑</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>

